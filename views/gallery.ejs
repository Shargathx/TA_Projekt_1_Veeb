    <ul>
        <li><a href="/"> Avaleht </a></li>
    </ul>
    <hr>
    <!-- dialoogi aken suuremate / normaalfotode näitamiseks -->
    <dialog id="modal" class="modalarea">
        <span id="modalClose" class="modalClose"> &times; </span>
        <div id="modalGallery" class="modalHorizontal">
            <div class="modalVertical">
                <p id="modalCaption"></p>
                <img id="modalImage" src="/images/empty.png" alt="galeriipilt">
            </div>
        </div>

    </dialog>


    <h2>Fotogalerii</h2>
    <div id="gallery" class="gallery">
        <% galleryData.forEach(function(image){ %>
            <img src="<%= imagehref%><%= image.src%>" alt="<%= image.alt %>" class="thumbs"
                data-filename="<%= image.src%>">
            <% }); %>
    </div>


</body>

</html>